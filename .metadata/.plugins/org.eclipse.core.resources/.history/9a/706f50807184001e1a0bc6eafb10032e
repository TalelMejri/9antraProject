package org.dsi.controller;

import java.util.List;

import org.dsi.entity.Offre;
import org.dsi.repo.OffreRepo;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

@RestController
@RequestMapping("/offre")
public class offreController {
	
	@Autowired
	OffreRepo offreRepo;
	
	@GetMapping("/{id}")
	public Offre getbyId(@PathVariable Integer id) {
		return offreRepo.getById(id);
	}
	
	@GetMapping("/{id}")
	public List<Offre> getAll() {
		return offreRepo.findAll();
	}
	
	@PostMapping("/add")
	public String AddOffre(@RequestBody Offre offre)
	{
		try {
			offreRepo.save(offre);
			return "Ok";
		}catch (Exception e) {
			return e.getMessage();
		}
		
	}
	
	@PutMapping("/update/{id}")
	public Offre UpdateOffre(@PathVariable Integer id,@RequestBody Offre offre) {
		offre.setCode(id);
		return offreRepo.save(offre);
	}

}
